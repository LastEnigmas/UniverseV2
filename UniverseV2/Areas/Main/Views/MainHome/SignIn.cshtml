    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
    <script src="/lib/bootstrapAria/js/bootstrap.js"></script>

    <link rel="stylesheet" href="/css/MainCss/SignInStyle.css">

</head>
<body style="overflow: hidden">

    <div id="head" class=" py-3 " style="clip-path: polygon(100% 0, 0 0, 0 100%);height: 125px;background-color: white">
        <h1 id="mainwelcome" class="text-primary ms-5  text-center pt-3 font-weight-bolder font-weight-lighter-md d-inline"
            style="font-family: 'Space Grotesk', serif;font-size: 40px;">
            Mehrshad's Universe  <img class=" d-none d-lg-inline " src="/Image/planet-saturn-svgrepo-com.svg" alt="planet"
                                      style="width: 50px;height: 50px;">
        </h1>
    </div>

    <div style="margin-left: 10%;" id="formDiv" class="mt-3  ">


        <form id="form" class="d-inline ">
            <br><br>
            <div class="d-inline-flex flex-column flex-wrap align-items-center justify-content-center">
                <div class="form-floating">
                    <input type="email" class="form-control" id="username" style="width: 300px;" placeholder="Username">
                    <label for="username">Username</label>
                </div>
                <div class="form-floating mt-3">
                    <input type="password" class="form-control" style="width: 300px;" id="password" placeholder="Password">
                    <label for="password">Password</label>
                </div>
                <button type="button" class="btn btn-primary mt-5 " style="width: 100px;">
                    <a asp-area="Main" style="text-decoration: none;" class="text-light" asp-controller="MainHome"
                       asp-action="SignIn">
                        Sign In
                    </a>
                </button>


            </div>


        </form>

        <div id="topc" class="float-end  " style="width:60%;margin-right: 9%;">
            <div class="carousel slide carousel-fade" id="carouselExample" data-bs-ride="carousel" data-bs-interval="3800" data-bs-pause="false">
                <ol class="carousel-indicators">
                    <li data-bs-target="#carouselExample" data-bs-slide-to="0" class="active"></li>
                    <li data-bs-target="#carouselExample" data-bs-slide-to="1"></li>
                    <li data-bs-target="#carouselExample" data-bs-slide-to="2"></li>
                    <li data-bs-target="#carouselExample" data-bs-slide-to="3"></li>

                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/Image/marsedited.jpg" class="img-fluid car-img"
                             alt="space" style="width: 800px;height: 400px; filter: brightness(45%); ">
                        <div class="carousel-caption d-flex h-100 align-items-center ">
                            <h1 style="font-size: 60px;font-weight: bolder;">Are you ready?</h1>
                        </div>

                    </div>
                    <div class="carousel-item">
                        <img style="width: 800px; height: 400px;filter: brightness(45%);"
                             src="/Image/earth large edit.jpg"
                             class="img-fluid car-img" alt="space">
                        <div class="carousel-caption d-flex h-100 align-items-center">
                            <h1 style="font-size: 60px;font-weight: bolder;">Be Strong.</h1>

                        </div>

                    </div>
                    <div class="carousel-item">
                        <img style="width: 800px; height: 400px;filter: brightness(45%);"
                             src="/Image/earthedit.jpg"
                             class="img-fluid car-img" alt="space">
                        <div class="carousel-caption d-flex h-100 align-items-center ">
                            <h1 style="font-size: 60px;font-weight: bolder;">Stay Motivated.</h1>

                        </div>

                    </div>
                    <div class="carousel-item">
                        <img style="width: 800px; height: 400px;filter: brightness(45%);"
                             src="/Image/planet-saturn-svgrepo-com.svg"
                             class="img-fluid car-img" alt="space">
                        <div class="carousel-caption d-flex h-100 align-items-center ">
                            <h1 style="font-size: 60px;font-weight: bolder;">Let's Go</h1>
                        </div>

                    </div>


                </div>

            </div>


        </div>
    </div>

    </div>



    <div class="text-light d-inline position-fixed  " style="margin-left: 5%;margin-top: 7%;text-align: center;">
        Don't have an
        account?&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <button type="button" class="btn btn-outline-primary " style="width: 100px;">
            <a asp-area="Main" asp-controller="MainHome" asp-action="SignUp" style="text-decoration: none;" class="text-light">
                Sign Up
            </a>
        </button>
    </div>

    <footer id="footer" class="bg-primary  ">
        <div>
            <p class="font-weight-bolder text-light ">This site is designed and created by Arya and Mehrshad.</p>
        </div>
    </footer>



</body>



</html>